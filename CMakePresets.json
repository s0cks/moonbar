{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 29,
    "patch": 3
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_MODULE_PATH": {
          "value": "${sourceDir}/cmake",
          "type": "FILEPATH"
        },
        "CMAKE_TOOLCHAIN_FILE": {
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
          "type": "FILEPATH"
        },
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_C_STANDARD": "23",
        "CMAKE_C_STANDARD_REQUIRED": "ON",
        "VCPKG_APPLOCAL_DEPS": "ON"
      },
      "environment": {
        "CC": "clang",
        "CXX": "clang++"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "value": "Debug",
          "type": "STRING"
        }
      },
      "environment": {
        "BUILD_ENVIRONMENT": "dev"
      },
      "inherits": [
        "base"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "displayName": "Debug",
      "configurePreset": "debug"
    }
  ]
}
